{
  "name": "fl-mngr",
  "author": "Tristan Collicott",
  "description": "File manager using electron & react.",
  "license": "epl-2.0",
  "version": "1.6.1",
  "private": true,
  "main": "public/electron.js",
  "homepage": "",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "chokidar": "^3.4.2",
    "concurrently": "^7.2.2",
    "copy-paste": "^1.3.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electronmon": "^2.0.2",
    "node-disk-info": "^1.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-scripts": "3.4.3",
    "redux": "^4.0.5",
    "redux-electron-ipc": "^1.2.0",
    "redux-thunk": "^2.3.0",
    "sass": "^1.52.3",
    "sharp": "^0.26.1",
    "trash": "^6.1.1"
  },
  "scripts": {
    "dev:start": "concurrently -k \"yarn dev:react\" \"yarn dev:electron\"",
    "dev:react": "cross-env NODE_OPTIONS=--openssl-legacy-provider react-scripts start",
    "dev:electron": "electronmon .",
    "build:react": "set NODE_OPTIONS=--openssl-legacy-provider && react-scripts build",
    "postbuild:react": "node mid-build.js",
    "build:electron": "electron-builder",
    "build:full": "yarn build:react && yarn build:electron",
    "build:test": "yarn build:react && yarn build:electron --dir && start ./dist/win-unpacked/fl-mngr.exe",
    "build:win": "yarn build:react && yarn build:electron -w",
    "build:linux": "yarn build:react && yarn build:electron -l",
    "build:mac": "yarn build:react && yarn build:electron -m"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3",
    "electron-debug": "^3.2.0",
    "mocha": "^8.1.3",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.fl-mngr",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "src/serviceWorker.js"
    ],
    "directories": {
      "buildResources": "public"
    }
  }
}
